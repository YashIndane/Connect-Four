            <Label fx:id="playerone" alignment="CENTER" prefHeight="27.0" prefWidth="305.0" text="Player One" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets top="70.0" />
               </VBox.margin>
            </Label>
            <Label alignment="CENTER" prefHeight="19.0" prefWidth="310.0" text="Turn" textFill="WHITE">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</GridPane>
